[colors]
background     = ${xrdb:color0:#222}
foreground     = ${xrdb:color15:#222}
foreground-alt = ${xrdb:color7:#222}
primary        = ${xrdb:color9:#222}
secondary      = ${xrdb:color10:#222}
alert          = ${xrdb:color11:#222}


[bar/bar]
wm-restack = bspwm

width    = 100%
height   = 25
offset-x = 0
offset-y = 0

bottom = false

background = ${colors.background}
foreground = ${colors.foreground}

border-top-size     = 5
border-top-color    = ${colors.background}

spacing            = 0
padding-left       = 3
padding-right      = 3 
module-margin-left = 3
module-margin-right = 0

font-0 = "Iosevka:style=Bold:size=11"
font-1 = "Iosevka:size=18"

tray-position    = none
tray-detached    = false
tray-maxsize     = 18
tray-transparent = false
tray-background  = ${colors.background}
tray-offset-x    = -15
tray-offset-y    = -5
tray-padding     = 0
tray-scale       = 1.0

modules-left   = bspwm
modules-center = spotify
modules-right  = cpu memory volume date

fixed-center = true




[module/spotify]
type         = custom/script
exec         = ~/.config/polybar/scripts/spotify.sh
interval     = 1

click-left = playerctl -p spotify play-pause &

double-click-left = playerctl -p spotify next &
click-right = playerctl -p spotify previous &


[module/bspwm]
type           = internal/bspwm
pin-workspaces = true
inline-mode    = false
enable-click   = true
enable-scroll  = true
reverse-scroll = true

ws-icon-0 = DEV;
ws-icon-1 = WEB;爵
ws-icon-2 = DOC;
ws-icon-3 = ART;
ws-icon-4 = MEDIA;
ws-icon-5 = REST;
ws-icon-6 = GAME;
ws-icon-7 = CHAT;
ws-icon-8 = SYS;漣

label-focused = %{T2}%icon%%{T-}
label-focused-foreground = ${colors.primary}

label-occupied = %{T2}%icon%%{T-}
label-occupied-foreground = ${colors.alert}

label-urgent = %{T2}%icon%%{T-}
label-urgent-foreground = ${colors.secondary}

label-empty = %{T2}%icon%%{T-}

label-separator            = |
label-separator-padding    = 1
label-separator-foreground = ${colors.background}


[module/memory]
type              = internal/memory
interval          = 1
format            = <label>
format-foreground = ${colors.secondary}
label             = %{T2}%{T-} %percentage_used%%


[module/cpu]
type = internal/cpu
interval = 1
format = <label>
format-foreground = ${colors.primary}
label = %{T2}%{T-} %percentage%%


[module/volume]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_05.0.analog-stereo

use-ui-max = false

format-volume           = <label-volume>
label-volume            = "%{T2}墳%{T-} %percentage%%"
label-volume-foreground = ${colors.alert}

format-muted           = <label-muted>
label-muted            = "%{T2}婢%{T-} 0%"
label-muted-foreground = ${colors.alert}

click-right = "pavucontrol &"


[module/date]
type     = internal/date
interval = 1.0
time     = "%{T2}%{T-} %H:%M"
time-alt = ""
date     = ""
date-alt = "%{T2}%{T-} %d.%m.%Y"
label    = "%time%%date%"

format           = <label>
label-foreground = ${colors.foreground}

